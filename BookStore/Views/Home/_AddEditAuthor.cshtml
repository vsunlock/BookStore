@model BookStore.Models.Author

@{
    string title = "Add Author";
    string buttonName = "Add";
    if (Model.author_id != 0)
    {
        title = "Edit Author : " + Model.first_name;
        buttonName = "Update";
    }

}

@using (Html.BeginForm())
{
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">@title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">

        @Html.HiddenFor(x => x.author_id)
        <div class="form-group">
            @Html.LabelFor(x => x.first_name)
            @Html.TextBoxFor(x => x.first_name, new { @class = "form-control",@required= "required", @placeholder = "Enter First Name" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.last_name)
            @Html.TextBoxFor(x => x.last_name, new { @class = "form-control", @placeholder = "Enter Last Name" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.date_of_birth)
            @Html.TextBoxFor(x => x.date_of_birth, new { @class = "form-control", @required = "required", @placeholder = "Enter Last Name" })
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">@buttonName</button>
    </div>
}