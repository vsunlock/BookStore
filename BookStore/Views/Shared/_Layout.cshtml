<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BookStore</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">*@
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-custom " style=" border-radius: 0px;margin-bottom: 0px;
" id="header">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Book Store", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Book", "BooksList", "Home", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Author", "AuthorList", "Home", new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </div>
    @*<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container">
                @Html.ActionLink("Book Store", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            @Html.ActionLink("Home", "Index", "Home",  new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("About", "Index", "Home", new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Services", "Index", "Home",  new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Blog", "Index", "Home",  new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact", "Index", "Home", new { @class = "nav-link" })
                        </li>
                    </ul>
                </div>
            </div>
        </nav>*@

    <div class="container-fluid body-content mainPage">
        @RenderBody()

    </div>
    <div class="container-fluid" id="footer">
        <div class="container">
            <footer>
                <p style="margin-bottom:0px">&copy; @DateTime.Now.Year - Book Store</p>
            </footer>
        </div>
    </div>


    <script type="text/javascript">
        $(document).ready(function () {
            var widHt = $(window).height();
            var headerHt = $("#header").height();
            var footerHt = $("#footer").height();

            $("#indexPage").height(widHt - headerHt - footerHt - 10);
        });
    </script>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bkStore.js"></script>
</body>
</html>